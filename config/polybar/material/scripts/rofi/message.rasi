/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       #1d2021;
    text-color:             @fg;
	font:				 	"Iosevka Nerd Font 10";
}

window {
    width:      			320px;
    padding:    			25px;
    border:					3px;
    border-radius:          0px;
    border-color:           #008080;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				#008080;
}
